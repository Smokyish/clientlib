{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "es2015",
        "target": "es2015",
        "lib": [ "es6", "dom" ],
        "outDir": "lib-esm",
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "declaration": true,
        "jsx": "react"
    },
    "include": [
        "./src/TLNetwork.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
