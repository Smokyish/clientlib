{
  "name": "trustlines-clientlib",
  "version": "0.1.5",
  "description": "Javascript library for interacting with the trustlines network protocol",
  "main": "lib-esm/TLNetwork.js",
  "scripts": {
    "build": "tsc && tsc -m es6 --outDir lib-esm && webpack",
    "build:esm": "tsc -m es6 --outDir lib-esm",
    "doc": "./node_modules/typedoc/bin/typedoc --options tdconfig.json",
    "lint": "tslint -c tslint.json ./src/**/**.ts ./tests/**/**.ts",
    "lint-fix": "tslint -c tslint.json --fix ./src/**/**.ts ./tests/**/**.ts",
    "test": "mocha --timeout 30000 --require isomorphic-fetch -r ts-node/register tests/**/**.test.ts",
    "test:e2e": "mocha --timeout 30000 --require isomorphic-fetch -r ts-node/register tests/e2e/**.test.ts",
    "test:integration": "mocha --require isomorphic-fetch -r ts-node/register tests/integration/**.test.ts",
    "test:unit": "mocha --require isomorphic-fetch -r ts-node/register tests/unit/**.test.ts",
    "watch:esm": "tsc -w -m es6 --outDir lib-esm",
    "bump:pre": "npm --no-git-tag-version version",
    "bump": "./bump.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trustlines-network/clientlib.git"
  },
  "author": "trustlines-network",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/trustlines-network/clientlib/issues"
  },
  "homepage": "https://github.com/trustlines-network/clientlib#readme",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/mocha": "^5.2.2",
    "@types/node": "^10.5.2",
    "awesome-typescript-loader": "^5.2.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "es6-promise": "^4.1.1",
    "fluid-publish": "^2.2.0",
    "isomorphic-fetch": "^2.2.1",
    "mocha": "^5.2.0",
    "reconnecting-websocket": "^3.0.7",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.1.0",
    "typedoc": "^0.11.1",
    "types-ethereumjs-util": "0.0.8",
    "typescript": "^2.9.2",
    "webpack": "^4.16.0",
    "webpack-cli": "^3.0.8"
  },
  "dependencies": {
    "bignumber.js": "7.2.1",
    "eth-lightwallet": "^3.0.1",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-util": "^5.2.0",
    "html5-websocket": "^2.0.2",
    "rxjs": "^5.4.1",
    "simple-jsonrpc-js": "0.0.10",
    "web3": "^1.0.0-beta.34"
  }
}
